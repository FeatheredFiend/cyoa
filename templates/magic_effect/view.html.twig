{% extends 'base.html.twig' %}

{% block title %}Magic Effects{% endblock %}

{% block body %}
<div class="container-fluid mt-3 mb-3">
  <p class="hidden" id="title">{{title}}</p> 
  {% if app.user != null %}
    <div class="row">
      <div class="col-sm-12 col-md-4" id="searchBox">
      <a class="text-decoration-none" href="{{ path('magiceffect_create') }}"><button type="button" class="col-12 btn-primary d-grid gap-2 nav-link text-white">Create Magic Effect</button></a>   
      {{ knp_pagination_filter(pagination, {'m.name': 'Magic Name', 'meo.name': 'Magic Effect Operator', 'me.magiceffectvalue': 'Magic Effect Value', 'mea.name': 'Magic Effect Attribute'}) }}
      {{ knp_pagination_render(pagination, null, {}, {
      'align': 'center',
      'size': 'small',
      'rounded': true,
      }) }}
      </div>
      <div class="col-sm-12 col-md-8 table-responsive" id="tableView">
      <a id="toggleSearch" class="nav-link text-white text-center paleRed">Search</a>
        <table class="table table-striped table-light">
          <thead>
            <tr>
              <th>ID</th>
              <th>Magic</th>
              <th>Magic Effect Operator</th>
              <th>Magic Effect Value</th>
              <th>Magic Effect Attribute</th>
            </tr>
          </thead>
          <tbody name="magiceffectTable" id="magiceffectTable">
            {% for magiceffect in pagination %}
            {% set id = magiceffect.id %}
              <tr>
                <td><a class="nav-link" href="{{ path('magiceffect_edit', {'id': magiceffect.id}) }}">{{ magiceffect.id}}</a></td>
                <td>{{ magiceffect.magic }}</td>
                <td>{{ magiceffect.magiceffectoperator }}</td>
                <td>{{ magiceffect.magiceffectvalue }}</td>
                <td>{{ magiceffect.magiceffectattribute }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  {% endif %}           
</div>
{% endblock %}
