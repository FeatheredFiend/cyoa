{% extends 'base.html.twig' %}

{% block title %}Equipment Effects{% endblock %}

{% block body %}
<div class="container-fluid mt-3 mb-3">
  <p class="hidden" id="title">{{title}}</p> 
  {% if app.user != null %}
    <div class="row">
      <div class="col-sm-12 col-md-4">
      <a href="{{ path('equipmenteffect_create') }}"><button type="button" class="col-12 btn-primary d-grid gap-2 nav-link text-white">Create Equipment Effect</button></a>   
      {{ knp_pagination_filter(pagination, {'e.name': 'Equipment Name', 'eeo.name': 'Equipment Effect Operator', 'ee.equipmenteffectvalue': 'Equipment Effect Value', 'eea.name': 'Equipment Effect Attribute'}) }}
      {{ knp_pagination_render(pagination, null, {}, {
      'align': 'center',
      'size': 'small',
      'rounded': true,
      }) }}
      </div>
      <div class="col-sm-12 col-md-8 table-responsive">
        <table class="table table-striped table-light">
          <thead>
            <tr>
              <th>ID</th>
              <th>Equipment</th>
              <th>Equipment Effect Operator</th>
              <th>Equipment Effect Value</th>
              <th>Equipment Effect Attribute</th>
            </tr>
          </thead>
          <tbody name="equipmenteffectTable" id="equipmenteffectTable">
            {% for equipmenteffect in pagination %}
            {% set id = equipmenteffect.id %}
              <tr>
                <td><a class="nav-link" href="{{ path('equipmenteffect_edit', {'id': equipmenteffect.id}) }}">{{ equipmenteffect.id}}</a></td>
                <td>{{ equipmenteffect.equipment }}</td>
                <td>{{ equipmenteffect.equipmenteffectoperator }}</td>
                <td>{{ equipmenteffect.equipmenteffectvalue }}</td>
                <td>{{ equipmenteffect.equipmenteffectattribute }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  {% endif %}           
</div>
{% endblock %}
