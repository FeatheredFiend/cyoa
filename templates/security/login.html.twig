{# templates/security/login.html.twig #} {% extends 'base.html.twig' %} 
{% block title %}Log in to Create Your Own Adventure Symfony{% endblock %} {% block body %}
<div class="container position-absolute top-50 start-50 translate-middle">
    <form class="form-horizontal" role="form" method="post">
    {% if error %}
    <div class="alert alert-danger">
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
    {% endif %} {% if app.user %}
    <div class="mb-3">
        You are logged in as {{ app.user.username }},
        <a href="{{ path('app_logout') }}">Logout</a>
    </div>
    {% endif %}
    <div class="card-header mb-3">Please sign in</div>
    <div class="form-group">
        <label for="email" class="col-md-4 control-label">E-Mail Address</label>
        <div class="d-flex justify-content-center bd-highlight mb-3">
            <input id="inputEmail" type="email" class="form-control" name="email" value="{{ last_username }}" required autofocus/>
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-md-4 control-label">Password</label>
        <div class="d-flex justify-content-center bd-highlight mb-3">
            <input id="inputPassword" type="password" class="form-control" name="password" required/>
        </div>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
    <div class="form-group">
        <div class="d-flex justify-content-center bd-highlight mb-3" style="margin-top:5px;">
            <button type="submit" class="btn-danger d-grid col-12 gap-2">
                <i class="fa fa-btn fa-sign-in"></i> Login
            </button>
        </div>
    </div>
    </form>
</div>
{% endblock %}
