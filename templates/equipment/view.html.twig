{% extends 'base.html.twig' %}

{% block title %}Equipment{% endblock %}

{% block body %}
<div class="container-fluid mt-3 mb-3">
  <p class="hidden" id="title">{{title}}</p> 
  {% if app.user != null %}
    <div class="row">
      <div class="col-sm-12 col-md-4">
      <a href="{{ path('equipment_create') }}"><button type="button" class="col-12 btn-primary d-grid gap-2 nav-link text-white">Create Equipment</button></a>   
      {{ knp_pagination_filter(pagination, {'p.number': 'Paragraph', 'e.name': 'Equipment Name'}) }}
      {{ knp_pagination_render(pagination, null, {}, {
      'align': 'center',
      'size': 'small',
      'rounded': true,
      }) }}
      </div>
      <div class="col-sm-12 col-md-8 table-responsive">
        <table class="table table-striped table-light">
          <thead>
            <tr>
              <th>ID</th>
              <th>Paragraph</th>
              <th>Name</th>
            </tr>
          </thead>
          <tbody name="equipmentTable" id="equipmentTable">
            {% for equipment in pagination %}
            {% set id = equipment.id %}
              <tr>
                <td><a class="nav-link" href="{{ path('equipment_edit', {'id': equipment.id}) }}">{{ equipment.id}}</a></td>
                <td>{{ equipment.paragraph }}</td>
                <td>{{ equipment.name }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  {% endif %}           
</div>
{% endblock %}
