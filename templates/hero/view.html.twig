{% extends 'base.html.twig' %}

{% block title %}Heroes{% endblock %}

{% block body %}
<div class="container-fluid mt-3 mb-3">
  <p class="hidden" id="title">{{title}}</p> 
  {% if app.user != null %}
    <div class="row">
      <div class="col-sm-12 col-md-4">
      <a href="{{ path('hero_create') }}"><button type="button" class="col-12 btn-primary d-grid gap-2 nav-link text-white">Create Hero</button></a>   
      {{ knp_pagination_filter(pagination, {'h.name': 'Name', 'h.startingskill': 'Starting Skill', 'h.skill': 'Skill', 'h.startingstamina': 'Starting Stamina', 'h.stamina': 'Stamina', 'h.startingluck': 'Starting Luck', 'h.luck': 'Luck', 'h.honour': 'Honour', 'h.startingprovision': 'Starting Provision', 'h.provision': 'Provision'}) }}
      {{ knp_pagination_render(pagination, null, {}, {
      'align': 'center',
      'size': 'small',
      'rounded': true,
      }) }}
      </div>
      <div class="col-sm-12 col-md-8 table-responsive">
        <table class="table table-striped table-light">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Starting Skill</th>
              <th>Skill</th>
              <th>Starting Stamina</th>
              <th>Stamina</th>
              <th>Starting Luck</th>
              <th>Luck</th>
              <th>Honour</th>
              <th>Starting Provisions</th>
              <th>Provisions</th>
            </tr>
          </thead>
          <tbody name="heroTable" id="heroTable">
            {% for hero in pagination %}
            {% set id = hero.id %}
              <tr>
                <td><a class="nav-link" href="{{ path('hero_edit', {'id': hero.id}) }}">{{ hero.id}}</a></td>
                <td>{{ hero.name }}</td>
                <td>{{ hero.startingskill }}</td>
                <td>{{ hero.skill }}</td>
                <td>{{ hero.startingstamina }}</td>
                <td>{{ hero.stamina }}</td>
                <td>{{ hero.startingluck }}</td>
                <td>{{ hero.luck }}</td>
                <td>{{ hero.honour }}</td>
                <td>{{ hero.startingprovision }}</td>
                <td>{{ hero.provision }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  {% endif %}           
</div>
{% endblock %}
