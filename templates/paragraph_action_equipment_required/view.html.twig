{% extends 'base.html.twig' %}

{% block title %}Paragraph Action Equipment Required{% endblock %}

{% block body %}
<div class="container-fluid mt-3 mb-3">
  <p class="hidden" id="title">{{title}}</p>
  <p class="hidden" id="gamebook">{{gamebook}}</p>
  <p class="hidden" id="paragraph">{{paragraph}}</p> 
  <p class="hidden" id="paragraphaction">{{paragraphaction}}</p> 
  {% if app.user != null %}
    <div class="row">
      <div class="col-sm-12 col-md-4" id="searchBox">
      <a class="text-decoration-none" href="{{ path('paragraphactionequipmentrequired_create', {'gamebook': gamebook, 'paragraph': paragraph, 'paragraphaction': paragraphaction}) }}"><button type="button" class="col-12 btn-primary d-grid gap-2 nav-link text-white">Create Paragraph Action Equipment Required</button></a>   
      {{ knp_pagination_filter(pagination, {'paer.text': 'Paragraph Action', 'e.name': 'Equipment'}) }}
      {{ knp_pagination_render(pagination, null, {}, {
      'align': 'center',
      'size': 'small',
      'rounded': true,
      }) }}
      </div>
      <div class="col-sm-12 col-md-8 table-responsive" id="tableView">
      <a id="toggleSearch" class="nav-link text-white text-center paleRed">Search</a>
        <table class="table table-striped table-light">
          <thead>
            <tr>
              <th>Paragraph Action</th>
              <th>Equipment</th>
            </tr>
          </thead>
          <tbody name="paragraphactionequipmentrequiredTable" id="paragraphactionequipmentrequiredTable">
            {% for paragraphactionequipmentrequired in pagination %}
            {% set id = paragraphactionequipmentrequired.id %}
              <tr>
                <td><a class="nav-link gamebookTable" href="{{ path('gamebook_view', {'gamebook': gamebook}) }}">{{ paragraphactionequipmentrequired.paragraphaction }}</a></td>
                <td><a class="nav-link" href="{{ path('paragraph_view', {'gamebook': gamebook}) }}">{{ paragraphactionequipmentrequired.equipment }}</a></td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  {% endif %}           
</div>
{% endblock %}
