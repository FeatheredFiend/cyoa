{% extends 'base.html.twig' %}

{% block title %}Gamebook Permissions{% endblock %}

{% block body %}
<div class="container-fluid mt-3 mb-3">
  <p class="hidden" id="title">{{title}}</p> 
  {% if app.user != null %}
    <div class="row">
      <div class="col-sm-12 col-md-4" id="searchBox">
      <a class="text-decoration-none" href="{{ path('gamebookpermission_create') }}"><button type="button" class="col-12 btn-primary d-grid gap-2 nav-link text-white">Create Gamebook Permission</button></a>   
      {{ knp_pagination_filter(pagination, {'g.name': 'Name'}) }}
      {{ knp_pagination_render(pagination, null, {}, {
      'align': 'center',
      'size': 'small',
      'rounded': true,
      }) }}
      </div>
      <div class="col-sm-12 col-md-8 table-responsive" id="tableView">
        <a id="toggleSearch" class="nav-link text-white text-center paleRed">Search</a>
        <table class="table table-striped table-light">
          <thead>
            <tr>
              <th>Gamebook</th>
              <th>User</th>
            </tr>
          </thead>
          <tbody name="gamebookpermissionTable" id="gamebookpermissionTable">
            {% for gamebookpermission in pagination %}
            {% set id = gamebookpermission.id %}
              <tr>
                <td><a class="nav-link" href="{{ path('gamebookpermission_edit', {'id': gamebookpermission.id}) }}">{{ gamebookpermission.gamebook }}</a></td>
                <td>{{ gamebookpermission.user }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  {% endif %}           
</div>
{% endblock %}
