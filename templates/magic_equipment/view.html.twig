{% extends 'base.html.twig' %}

{% block title %}Magic Equipment{% endblock %}

{% block body %}
<div class="container-fluid mt-3 mb-3">
  <p class="hidden" id="title">{{title}}</p> 
  {% if app.user != null %}
    <div class="row">
      <div class="col-sm-12 col-md-4" id="searchBox">
      <a class="text-decoration-none" href="{{ path('magicequipment_create') }}"><button type="button" class="col-12 btn-primary d-grid gap-2 nav-link text-white">Create Magic Equipment</button></a>   
      {{ knp_pagination_filter(pagination, {'m.name': 'Magic', 'e.name': 'Equipment'}) }}
      {{ knp_pagination_render(pagination, null, {}, {
      'align': 'center',
      'size': 'small',
      'rounded': true,
      }) }}
      </div>
      <div class="col-sm-12 col-md-8 table-responsive" id="tableView">
      <a id="toggleSearch" class="nav-link text-white text-center paleRed">Search</a>
        <table class="table table-striped table-light">
          <thead>
            <tr>
              <th>ID</th>
              <th>Magic</th>
              <th>Equipment</th>
            </tr>
          </thead>
          <tbody name="magicequipmentTable" id="magicequipmentTable">
            {% for magicequipment in pagination %}
            {% set id = magicequipment.id %}
              <tr>
                <td><a class="nav-link" href="{{ path('magicequipment_edit', {'id': magicequipment.id}) }}">{{ magicequipment.id}}</a></td>
                <td>{{ magicequipment.magic }}</td>
                <td>{{ magicequipment.equipment }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  {% endif %}           
</div>
{% endblock %}
