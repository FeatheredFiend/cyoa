{% extends 'base.html.twig' %}

{% block title %}Hero Attributes{% endblock %}

{% block body %}
<div class="container-fluid mt-3 mb-3">
  <p class="hidden" id="title">{{title}}</p> 
  {% if app.user != null %}
    <div class="row">
      <div class="col-sm-12 col-md-4" id="searchBox">
      <a href="{{ path('heroattribute_create') }}"><button type="button" class="col-12 btn-primary d-grid gap-2 nav-link text-white">Create Hero Attribute</button></a>   
      {{ knp_pagination_filter(pagination, {'ha.name': 'Name'}) }}
      {{ knp_pagination_render(pagination, null, {}, {
      'align': 'center',
      'size': 'small',
      'rounded': true,
      }) }}
      </div>
      <div class="col-sm-12 col-md-8 table-responsive" id="tableView">
      <a id="toggleSearch" class="nav-link text-white text-center paleRed">Search</a>
        <table class="table table-striped table-light">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
            </tr>
          </thead>
          <tbody name="heroattributeTable" id="heroattributeTable">
            {% for heroattribute in pagination %}
            {% set id = heroattribute.id %}
              <tr>
                <td><a class="nav-link" href="{{ path('heroattribute_edit', {'id': heroattribute.id}) }}">{{ heroattribute.id}}</a></td>
                <td>{{ heroattribute.name }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  {% endif %}           
</div>
{% endblock %}
