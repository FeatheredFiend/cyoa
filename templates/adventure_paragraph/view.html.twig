{% extends 'base.html.twig' %}

{% block title %}Adventure Paragaphs{% endblock %}

{% block body %}
<div class="container-fluid mt-3 mb-3">
  <p class="hidden" id="title">{{title}}</p> 
  {% if app.user != null %}
    <div class="row">
      <div class="col-sm-12 col-md-4" id="searchBox">
      <a class="text-decoration-none" href="{{ path('adventureparagraph_create') }}"><button type="button" class="col-12 btn-primary d-grid gap-2 nav-link text-white">Create Adventure Paragaph</button></a>   
      {{ knp_pagination_filter(pagination, {'a.name': 'Adventure', 'ap.paragraph': 'Paragraph'}) }}
      {{ knp_pagination_render(pagination, null, {}, {
      'align': 'center',
      'size': 'small',
      'rounded': true,
      }) }}
      </div>
      <div class="col-sm-12 col-md-8 table-responsive" id="tableView">
      <a id="toggleSearch" class="nav-link text-white text-center paleRed">Search</a>
        <table class="table table-striped table-light">
          <thead>
            <tr>
              <th>ID</th>
              <th>Adventure</th>
              <th>Paragraph</th>
            </tr>
          </thead>
          <tbody name="adventureparagraphTable" id="adventureparagraphTable">
            {% for adventureparagraph in pagination %}
            {% set id = adventureparagraph.id %}
              <tr>
                <td><a class="nav-link" href="{{ path('adventureparagraph_edit', {'id': adventureparagraph.id}) }}">{{ adventureparagraph.id}}</a></td>
                <td>{{ adventureparagraph.adventure }}</td>
                <td>{{ adventureparagraph.paragraph }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  {% endif %}           
</div>
{% endblock %}
